{
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es2015",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "typeRoots": ["./src/typings"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/app.js"],
  "exclude": [
    "node_modules"
  ]
}
